<div class="px-4 py-5 my-5 text-center">
  <div class="display-5 fw-bold">Submit Your Recipe</div>
  <div class="col-lg-6 mx-auto">
    <p class="lead">Sharing recipe with thousands of the web developer across the world .Fill our form to get stated </p>
  </div>
</div>

<div class="row jsutify-content-center">
  <div class="col-8">
    <form action="/submit-recipe" enctype="multipart/form-data" method="POST">
      <div class="row g-3">
        <div class="col-12">
          <label for="email" class="form-label">Email</label>
          <input type="email" name="email" id="email"
          class="form-control">
        </div>

      
          <div class="col-12">
            <label for="name" class="form-label">Recipe Name</label>
            <input type="text" name="name" id="name"
            class="form-control">
          </div>

         
            <div class="col-12">
              <label for="description" class="form-label">Description</label>
              <input type="text" name="name" id="description">
              <textarea name="description" id="description" cols="30" rows="4"
              class="form-control"></textarea>
            </div>

            <div class="col-12">
              <label for="name" class="form-label">Ingredient</label>
              <br>
              <small>Example : Ice </small>

              <div class="ingredientList">
              <div class="ingredientDiv mb-1">
              <input type="text" name="Ingredient">
            </div>
            </div>
            </div>


            <div class="col-12">
              <button type="button " class ="btn btn-outline-primary" id="addIngredientBtn" >Ingredient</button>
            </div>

            <div class="col-12">
              <label for="category">Select Category</label>
              <select class="form-select form-control" name="category" id="Category">
                <option selected>Selected Categories</option>
                <option value="Thai">Thai</option>
                <option value="American">American</option>
                <option value="chinese">Chinese</option>
                <option value="Mexican">Mexican</option>
                <option value="Indian">Indian</option>
              </select>
            </div>
            
            <div class="col-12">
              <label for="image">Product Image
                <input type="file" class="form-control" name="image" accept="image/*">
              </label>
            </div>

            <div class="col-12">
              <button type="submit" class="btn btn-primary" >Submit</button>
            </div>
            
      </div>
    </form>
  </div>
</div>